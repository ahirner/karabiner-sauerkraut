{
  "title": "Sauerkraut: caps-lock to US",
  "rules": [
    {
      "description": "Sauerkraut: caps-lock to US = / (to_if_alone) and \\, {}, [] (modifier)",

      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "5",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "6",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "8",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "9",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "7",
              "modifiers": ["shift"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": ["left_shift", "left_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": ["left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
